

#include <iostream>

using namespace std;

int main()
{
    
    int n,flag=0;
    cout<<"Check wheather the number is prime or not !"<<endl;
    cout<<"Enter the number: ";
    cin>>n;
    if(n==1 or n==0)
    {
        cout<<"The number is NOT a prime number."<<endl;
    }
    else if(n==2)
    {
        cout<<"The number is a prime number."<<endl;
    }
    else
    {
        for(int i=3;i<n-1;i++)
        {
            if(n%i==0)
            {
                cout<<"The number is not a prime number..";
                flag=1;
                break;
            }
        }
        if(flag==0)
        {
            cout<<"The number is a prime number.."<<endl;
        }
        
        
        
    }
    return 0;
    
}
